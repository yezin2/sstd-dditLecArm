package login;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

public interface IMemberDao {
	/**
	 * log in시에 db에 등록된 회원과 일치하는지 확인하기 위함
	 * @param id 
	 * @param password
	 * @return 작업 성공시 1, 작업 실패시 0
	 * @throws SQLException
	 */
	public int getMember(String id, String password) throws SQLException;
	/**
	 * 모든 회원의 정보를 조회한다.
	 * @return 조회된 모든 회원 정보
	 * @throws SQLException
	 */
	public List<MemberVO> getMemberList() throws SQLException;
	/**
	 * 회원 등록
	 * @param mv 등록할 회원의 정보
	 * @return 작업 성공시 1, 작업 실패시 0
	 * @throws SQLException
	 */
	public int insertMember(MemberVO mv) throws SQLException;
	public int updateMember(MemberVO mv) throws SQLException;
	public int deleteMember(String id) throws SQLException;
}
