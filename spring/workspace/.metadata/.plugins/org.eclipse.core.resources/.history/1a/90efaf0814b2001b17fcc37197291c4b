<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="member">
	<select id="selectMember" resultClass="com.servlet.dto.MemberVO">
		SELECT *
		FROM TB_LOGIN
	</select>
	<insert id="insertMember">
		insert from TB_LOGIN(ID, PWD, EMAIL, PHONE)
			values(#id#, #pwd#, #email#, #phone#)
	</insert>
	<update id="updateMember">
		update TB_LOGIN set PWD = #pwd#, EMAIL = #email#, PHONE = #phone#
		where ID = #id#
	</update>
	<delete id="deleteMember">
		delete from TB_LOGIN where ID = #id#
	</delete>
</sqlMap>