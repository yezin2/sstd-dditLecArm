<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="code">
<!-- 
		코드관리
	- 코드명, 조건 등으로 검색할 수 있어야함
-->
	<select id="retrieveCodeList" 
	parameterClass="kr.or.ddit.common.vo.CodeVO" 
	resultClass="kr.or.ddit.common.vo.CodeVO">
		SELECT  GROUP_CODE        groupCode
				, GROUP_CODE_NAME   groupCodeName
				, CODE              code
				, CODE_NAME         codeName
				, DESCRIPTION       description
				, USE_YN            useYn
		FROM TB_CODE
		WHERE 1 = 1
			<isNotEmpty property="groupCode">
				AND GROUP_CODE = #groupCode#
			</isNotEmpty>
			<isNotEmpty property="code">
				AND CODE = #code#
			</isNotEmpty>
	</select>
</sqlMap>